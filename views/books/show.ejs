<h2 class="page-header"><%= book.title %></h2> 
<div class="book-details">
    <div class="book-section">
        <img class="book-cover" src="<%=book.coverImagePath %> " alt="">
        <div class="book-details-btn-grid">
            <a class="btn btn-primary" href="/books/<%= book.id %>/edit">Edit</a>
            <%-include("../partials/deleteForm", {url: `/books/${book.id}`}) %> 
            <a class="btn btn-primary book-details-author-button" href="/authors/<%= book.author.id %>/">View Author</a>
        </div>
    </div>
    <div class="book-details-grid">
        <div class="book-details-label"><b>Author: </b><%= book.author.name %></div>
        <div class="book-details-label"><b>Publish Date: </b> <%= book.publishDate.toDateString() %></div>
        <div class="book-details-label"><b>Page Count: </b><%= book.pageCount %></div>
        <div class="book-details-label"><b>Description: </b><%= book.description %> </div>

        <strong></strong>
    </div>
</div>